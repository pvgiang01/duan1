<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanTriMainActivity">

    <fragment
        android:id="@+id/fragmentQuanTri"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/QuanTriNavigation"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:name="com.example.project1group3.fragmentAdmin.FragmentDanhSachLop" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/QuanTriNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:itemTextColor="#1BA1E2"
        app:itemIconTint="#1BA1E2"
        android:layout_gravity="start"
        android:layout_alignParentBottom="true"
        app:menu="@menu/my_navigation_items" />
</RelativeLayout>