<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/background"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".LoginAdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBackAdminToMain"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:src="@drawable/ic_may" />

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_may" />
    </LinearLayout>

    <TextView
        style="@style/Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textView"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Tài khoản Admin"/>

    <EditText
        android:id="@+id/edtUsernameAdmin"
        style="@style/edittext"
        android:layout_width="match_parent"
        android:hint="Tên đăng nhập" />


    <EditText
        android:id="@+id/edtPasswordAdmin"
        style="@style/edittext"
        android:layout_width="match_parent"
        android:hint="Mật khẩu"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnLoginAdmin"
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/yes" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:layout_marginTop="8dp"
        android:textAlignment="textEnd"
        style="@style/textView"
        android:textColor="#fff"/>
</LinearLayout>
